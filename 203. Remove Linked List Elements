class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        
        if(head == NULL)
            return NULL;
        if(head->val == val){
            if(head->next == NULL)
                return NULL;
            else{
                head->next = removeElements(head->next, val);
                return head->next;
            }
                
        }
        
        if(head->val != val){
            head->next = removeElements(head->next, val);
            return head;
        }
        
        //head = removeElements(head->next, val);
        return head;
        
    }
};
