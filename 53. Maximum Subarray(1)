class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        
        //Kadane's algorithm general form
        int sum = 0;
        int maxSum = INT_MIN;
        
        if(nums.size() == 1){
            return nums[0];
        }
        else{
            for(int i=0; i<nums.size(); i++){
            
            sum += nums[i];
            
            if(sum>maxSum)
                maxSum = sum;
            
            if(sum<0)
                sum = 0;
        }
        }
        
        
        return maxSum;
    }
};
